.scroll-choose-all {
  width: 750rpx;
  height: 70px;
  margin: 4rpx 0 20rpx 0;
  border-top: 4rpx solid #d7e3e2;
  position: relative;
  color: #a3abb3;
}
.middleLine {
  position: absolute;
  width: 4px;
  height: 40px;
  background: #007aff;
  left: 375rpx;
  margin-left: -2px;
  z-index: 1;
}
.scroll-choose {
  width: 750rpx;
  height: 70px;
}
.scroll-choose .scroll-con {
  height: 70px;
  overflow: hidden;
}
.scroll-choose .scroll-con .topLine {
  height: 30px;
  padding: 0 372rpx;
}
.scroll-choose .scroll-con .bottomNum {
  height: 30px;
  padding: 20rpx 0 0 372rpx;
  width: 100%;
}
.scroll-choose .scroll-con .bottomNum .allNum {
  display: inline-block;
  position: relative;
  text-align: center;
  color: #999;
}
.scroll-choose .scroll-con .allLine {
  display: inline-block;
  width: 2px;
  background: #a3abb3;
  position: relative;
}
.scroll-choose .scroll-con .allLine:last-child {
  margin-right: 0px !important;
}
.scroll-choose .scroll-con .LLine {
  height: 30px;
}
.scroll-choose .scroll-con .MLine {
  height: 20px;
  top: -10px;
}
.scroll-choose .scroll-con .SLine {
  height: 15px;
  top: -15px;
}

